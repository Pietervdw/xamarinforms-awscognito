<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XFCognito.Views.MainPage"
             Title="{Binding Title}">

    <StackLayout 
        HorizontalOptions="CenterAndExpand" 
        VerticalOptions="CenterAndExpand" 
        Margin="25">

        <Label Text="Authenticate URL"/>
        <Entry Text="{Binding AuthenticateUrl}" />

        <Label Text="Callback URL" />
        <Entry Text="{Binding CallbackUrl}"/>

        <Label Text="Click the button to log in" />

        <Button Text="Login" 
                Command="{Binding LoginCommand}"
                BackgroundColor="#1976D2"
                TextColor="White"/>

        <Label Text="{Binding AccessToken}"/>

    </StackLayout>

</ContentPage>